<h1 class="navbar">Your Decks</h1>

<div class="decks">
	<% if @decks.nil? %>
	  You don't have any decks.
  <% else %>
    <table id="user-decks" class="navbar">
      <thead>
        <th>Name</th>
        <th><span class='deck-header'>Preview</span></th>
        <th><span class='deck-header'>Actions</span></th>
      </thead>
      <tbody>
        <%= render :partial => 'decks/deck', :collection => @decks %></table>	 
      </tbody>
  <% end %>
</div>

<%= render :partial => 'decks/create_deck', :locals => { :deck => @deck } %>
