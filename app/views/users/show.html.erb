<h1 class="navbar">Your Impressions</h1>

<div class="decks">
	<% if @decks.nil? %>
	  You don't have any impressions.
  <% else %>
    <table id="user-decks" class="navbar">
      <thead>
        <th>Name</th>
        <th><span class='deck-header'>Preview</span></th>
        <th><span class='deck-header'>Actions</span></th>
      </thead>
      <tbody>
        <%= render :partial => 'decks/deck', :collection => @decks %></table>	 
      </tbody>
  <% end %>
  <%= form_for @deck do |f| %>

		<%= f.submit "create", :class => 'button create-button' %>

	<% end %>
</div>


