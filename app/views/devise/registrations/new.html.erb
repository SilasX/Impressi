<div id='sign-up-div'>
	<h2 class='sign-up'>Sign up</h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div><%= f.email_field :email, :placeholder => 'email' %></div>

	  <div><%= f.password_field :password, :placeholder => 'password' %></div>

	  <div><%= f.password_field :password_confirmation, 
															:placeholder => 'password confirmation' %></div>

	  <%= f.button "Sign up", :class => 'button nav-button alter' %>
	<% end %>

	<%= render "links" %>
</div>

